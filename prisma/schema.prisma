generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String     @id @default(uuid())
  name              String
  email             String     @unique
  password          String
  userRole          String?
  contact           Float
  contact_secondary Float?
  enterprise        Enterprise @relation(fields: [enterprise_id], references: [id])
  enterprise_id     String
  sectors           Sector     @relation(fields: [sector_id], references: [id])
  sector_id         String
  createdAt         DateTime   @default(now())

  @@map("users")
}

model Enterprise {
  id        String             @id @default(uuid())
  name      String
  city      String
  uf        String
  contact   Float              @unique
  zipCode   Float?
  createdAt DateTime           @default(now())
  users     User[]
  sectors   SectorEnterprise[]

  @@map("enterprises")
}

model Sector {
  id          String             @id @default(uuid())
  name        String             @unique
  users       User[]
  createdAt   DateTime           @default(now())
  enterprises SectorEnterprise[]

  @@map("sectors")
}

model SectorEnterprise {
  enterprises   Enterprise @relation(fields: [enterprise_id], references: [id])
  enterprise_id String
  sectors       Sector     @relation(fields: [sector_id], references: [id])
  sector_id     String

  @@id([enterprise_id, sector_id])
  @@map("sector_enterprise")
}
